{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Dying Light 2 Save Editor",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$RESOURCE/*"
        ]
      }
    },
    "bundle": {
      "resources": [
        "./IDs/*"
      ],
      "active": true,
      "targets": "all",
      "identifier": "com.dyinglight.save.editor",
      "icon": [
        "icons/main-icon.ico",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Dying Light 2 Save Editor",
        "width": 1080,
        "height": 800
      }
    ]
  }
}
